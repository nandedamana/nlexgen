#ifndef _N96E_LEX_ERROR_H
#define _N96E_LEX_ERROR_H

#include <stdarg.h>
#include <stdio.h>
#include <stdlib.h>

static inline void nlex_die(const char * fmt, ...)
{
	va_list ap;

	fflush(stdout);

	va_start(ap, fmt);
	fprintf(stderr, "nlexgen error: ");
	vfprintf(stderr, fmt, ap);
	va_end(ap);

	exit(EXIT_FAILURE);
}

